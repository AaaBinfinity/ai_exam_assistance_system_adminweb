{
  "compilerOptions": {
    "target": "es2015", // 或更高版本
    "module": "esnext",  // 使用 ES 模块
    "moduleResolution": "node", // 或 "nodenext"（适用于 ES 模块）
    "lib": ["es2015", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
